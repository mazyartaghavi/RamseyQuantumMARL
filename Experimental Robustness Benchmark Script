from rgqo.training.trainer import RGQOTrainer
from rgqo.optimization.annealing_solver import SimulatedAnnealingSolver
from rgqo.optimization.qubo_builder import QUBOBuilder

print("Starting RGQO training...")

# Initialization logic here


def evaluate_noise(env, trainer, noise_levels):
    results = {}

    for sigma in noise_levels:
        reward = 0
        env.set_noise(sigma)
        for _ in range(10):
            reward += env.run_episode(trainer)
        results[sigma] = reward / 10

    return results
